<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120px"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <ImageView
        android:layout_width="200px"
        android:layout_height="100px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25px"
        android:src="@mipmap/logo_icon" />

    <ImageView
        android:id="@+id/img_search"
        android:layout_width="60px"
        android:layout_height="60px"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="35px"
        android:src="@drawable/img_search" />

    <ImageView
        android:id="@+id/img_scanner"
        android:layout_width="60px"
        android:layout_height="60px"
        android:layout_centerVertical="true"
        android:layout_marginRight="60px"
        android:layout_toLeftOf="@+id/img_search"
        android:src="@drawable/img_scanner" />

    <ImageView
        android:id="@+id/img_history"
        android:layout_width="60px"
        android:layout_height="60px"
        android:layout_centerVertical="true"
        android:layout_marginRight="60px"
        android:layout_toLeftOf="@+id/img_scanner"
        android:src="@drawable/img_history" />

    <ImageView
        android:id="@+id/img_message"
        android:layout_width="60px"
        android:layout_height="60px"
        android:layout_centerVertical="true"
        android:layout_marginRight="60px"
        android:layout_toLeftOf="@+id/img_history"
        android:src="@drawable/img_message" />

</com.zhy.autolayout.AutoRelativeLayout>